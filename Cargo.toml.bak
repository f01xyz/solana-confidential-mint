[workspace]
members = [ "." ]

[package]
name = "solana-confidential-mint"
version = "0.1.0"
edition = "2021"

[lib]
name = "solana_confidential_mint"
path = "src/lib/mod.rs"

[[bin]]
name = "solana-confidential-mint"
path = "src/main.rs"

[[bin]]
name = "test-create-mint"
path = "test_create_mint.rs"

[dependencies]
# --- Solana core ---
solana-sdk = "=1.17.6"
solana-client = "=1.17.6"
solana-program = "=1.17.6"

# --- Token extensions for 1.17 line ---
spl-token = "=4.0.0"
spl-token-2022 = "=0.7.0"
spl-token-client = "=0.7.0"
spl-associated-token-account = "=1.2.0"
solana-zk-token-sdk = "=1.17.6"

# Confidential-transfer proof helper crates
spl-token-confidential-transfer-proof-extraction = "0.1.0"
spl-token-confidential-transfer-proof-generation = "0.1.0"

# --- utilities ---
tokio = { version = "1", features = ["full"] }
anyhow = "1.0"
dirs = "5.0"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
bs58 = "0.4.0"
rand = "0.8.5"
rand_core = "0.6"
